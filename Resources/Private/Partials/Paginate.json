<f:if condition="{configuration.insertAbove}">
	"pagination" : [
	<f:render section="paginator" arguments="{pagination: pagination}" />
	],
</f:if>

<f:renderChildren arguments="{contentArguments}" />

<f:if condition="{configuration.insertBelow}">
	"pagination" : [
	<f:render section="paginator" arguments="{pagination: pagination}" />
],
</f:if>

<f:section name="paginator">
	<f:if condition="{pagination.numberOfPages} > 1">
				<f:if condition="{pagination.previousPage}">
						<f:if condition="{pagination.previousPage} > 1">
							<f:then>
<![CDATA[{]]>
	"rel": "previous",
		"href": "{f:uri.action(action: 'index', arguments: {currentPage: pagination.previousPage}, format: 'json')}"
}
							</f:then>
							<f:else>
<![CDATA[{]]>
	"rel": "previous",
		"href": "{f:uri.action(action: 'index', format: 'json')}"
}
							</f:else>
						</f:if>
				</f:if>
				<f:if condition="{pagination.displayRangeStart} > 1">
<![CDATA[{]]>
	"rel": "1",
		"href": "{f:uri.action(action: 'index', format: 'json')}"
}
				</f:if>
				<f:if condition="{pagination.hasLessPages}">
				</f:if>
				<f:for each="{pagination.pages}" as="page">
					<f:if condition="{page.isCurrent}">
						<f:then>
						</f:then>
						<f:else>
								<f:if condition="{page.number} > 1">
									<f:then>
<![CDATA[{]]>
	"rel": "{page.number}",
		"href": "{f:uri.action(controller: 'Document', absolute: 1, action: 'index', arguments: {--typo3-fluid-viewhelpers-widget-paginateviewhelper: {currentPage: page.number}}, format: 'json')}"
}
									</f:then>
									<f:else>
<![CDATA[{]]>
	"rel": "{page.number}",
		"href": "{f:uri.action(action: 'index', format: 'json')}"
}
									</f:else>
								</f:if>
						</f:else>
					</f:if>
				</f:for>
				<f:if condition="{pagination.hasMorePages}">
				</f:if>
				<f:if condition="{pagination.displayRangeEnd} < {pagination.numberOfPages}">
<![CDATA[{]]>
	"rel": "{pagination.numberOfPages}",
		"href": "{f:uri.action(action: 'index', arguments: {currentPage: pagination.numberOfPages}, format: 'json')}"
}
				</f:if>
				<f:if condition="{pagination.nextPage}">
<![CDATA[{]]>
	"rel": "next",
		"href": "{f:uri.action(action: 'index', arguments: {currentPage: pagination.nextPages}, format: 'json')}"
}
				</f:if>
	</f:if>
</f:section>
